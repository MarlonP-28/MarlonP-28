<div>
    <h1 class="titulo">Historial de Archivos</h1>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Título</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each notes}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td>{{Periodo}}</td>
                    <td>
                        <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                        <!-- DELETE REQUEST -->
                        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST" class="d-inline">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-sm">
                                Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<div class="mt-4">
    <a href="/notes/add" class="btn btn-primary">Nuevo</a>
    <button class="btn btn-info" id="buscarBtn">Buscar</button>
</div>

