{{#each errors}}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header bg-dark text-center">
      <h3 class="text-white">Actualizar Archivo</h3>
    </div>
    <div class="card-body">
      <form action="/notes/edit-notes/{{note._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT" />
        <!-- Add the following code for the fields you mentioned -->
        <div class="mb-3">
          <label for="area">√Årea:</label>
          <select name="area" class="form-control">
            <!-- Add options as needed, and set the selected option based on note.area -->
            <option value="option1" {{#if (eq note.area "option1")}}selected{{/if}}>Option 1</option>
            <option value="option2" {{#if (eq note.area "option2")}}selected{{/if}}>Option 2</option>
          </select>
        </div>
        <!-- Repeat the above block for other fields like secretariaType, documentType, etc. -->

        <button class="btn btn-primary w-100" type="submit">
          Guardar
        </button>
      </form>
    </div>
  </div>
</div>
