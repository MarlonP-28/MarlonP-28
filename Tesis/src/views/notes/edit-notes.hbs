{{#each errors}}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header bg-dark text-center">
      <h3 class="text-white">Actualizar Archivo</h3>
    </div>
    <div class="card-body">
      <form action="/notes/edit-notes/{{note._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT" />
        <!-- Add the following code for the fields you mentioned -->
                <div class="mb-3">
                    <label for="facultad">Facultad:</label>
                    <select id="facultad" name="facultad">
                    <option value="FIS">FIS</option>
                    </select>
                    <br>
                </div>

                <div class="mb-3">
                    <label for="carrera">Carrera:</label>
                    <select id="carrera" name="carrera">
                        <option value="Computacion">Computacion</option>
                        <option value="Software">Software</option>
                    </select>
                    <br>
                </div>

                <div class="mb-3">
                    <label for="area">Área:</label>
                    <select id="area" name="area" onchange="actualizarArea()">
                        <option value="Decanato">Decanato</option>
                        <option value="Subdecanato">Subdecanato</option>
                        <option value="Jefatura">Subdecanato</option>
                    </select>
                    <br>
                </div>

                <div class="mb-3">
                    <label for="subArea">Subárea:</label>
                    <select id="subArea" name="subArea" onchange="actualizarTipoDocumento()">
                        <!-- Las opciones se actualizarán dinámicamente mediante JavaScript -->
                    </select>
                    <br>
                </div>

                <div class="mb-3">
                    <label for="tipoDocumento">Tipo de Documento:</label>
                    <select id="tipoDocumento" name="tipoDocumento" onchange="actualizarSubtipoDocumento()">
                        <!-- Las opciones se actualizarán dinámicamente mediante JavaScript -->
                    </select>
                    <br>
                </div>

                <div class="mb-3">
                    <label for="subTipoDocumento">Subtipo de Documento:</label>
                    <select id="subTipoDocumento" name="subTipoDocumento" onchange="actualizarPeriodo()">
                        <!-- Las opciones se actualizarán dinámicamente mediante JavaScript -->
                    </select>
                    <br>
                </div>

                <div class="mb-3">
                    <label for="periodo">Perido/Año:</label>
                    <select id="periodo" name="periodo">
                        <!-- Las opciones se actualizarán dinámicamente mediante JavaScript -->
                    </select>
                    <br>
                </div>

                <div class="mb-3">
                    <label for="pdfArchivo">Archivo PDF:</label>
                    <input type="file" id="pdfArchivo" name="pdfArchivo" accept=".pdf">
                    <br>
                </div>

                <div class="mb-3">
                    <label for="asunto">Asunto:</label>
                    <textarea id="asunto" name="asunto" rows="3" cols="35">{{note.asunto}}</textarea>
                    <!-- Puedes ajustar rows y cols según tus necesidades -->
                    <br>
                </div>

                <div class="mb-3">
                    <label for="observaciones">Observaciones:</label>
                    <textarea id="observaciones" name="observaciones" rows="3" cols="35">{{note.observaciones}}</textarea>
                    <!-- Puedes ajustar rows y cols según tus necesidades -->
                    <br>
                </div>

          <div class="d-flex justify-content-between mb-3">
              <a href="/notes" class="btn btn-primary">Cancelar</a>
              <button class="btn btn-primary" type="submit">Guardar</button>
          </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/script.js"></script>