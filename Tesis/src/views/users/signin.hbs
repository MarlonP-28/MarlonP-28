<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-1 bg-black text-white rounded">
      <div class="card-header text-center pt-5">
        <h1 class="h4 text-white">
          Account Login
        </h1>
      </div>
      <img
        class="mx-auto d-block logo m-4"
        src="/img/fis.png"
        alt="Logo"
      />
      <div class="card-body">
        <form action="/users/signin" method="POST">
          <div class="mb-3">
            <label for="email">Email:</label>
            <input
              type="email"
              class="form-control bg-dark text-white"
              name="email"
              placeholder="Email"
              autofocus
            />
          </div>
          <div class="mb-3">
            <label for="passswore">Password:</label>
            <input
              type="password"
              class="form-control bg-dark text-white"
              name="password"
              placeholder="Password"
            />
          </div>
          <div class="center">
            <button class="btn btn-success btn-block">Sign In</button>
          </div>
        </form>
        <p class="mt-2 text-center">
          <a class="text-white" href="/users/forgot-password">¿Olvidaste tu contraseña?</a>
        </p>
      </div>
    </div>
  </div>
</div>
